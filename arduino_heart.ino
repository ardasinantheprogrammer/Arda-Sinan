void setup() {
  Serial.begin(9600);
  
  // Initialize the display
  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {
    Serial.println(F("OLED display not found"));
    while(true); // Infinite loop if display not found
  }
  
  display.clearDisplay();
}

void loop() {
  // First frame: large heart centered
  display.clearDisplay();
  display.drawBitmap(48, 16, bigHeart, 32, 32, SSD1306_WHITE);
  display.display();
  delay(300);

  // Second frame: simulate "smaller" heart by shifting slightly
  display.clearDisplay();
  display.drawBitmap(52, 20, bigHeart, 32, 32, SSD1306_WHITE);
  display.display();
  delay(300);
}
